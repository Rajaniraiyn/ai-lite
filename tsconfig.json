{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/.tsbuildinfo",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "erasableSyntaxOnly": true,
    "allowImportingTsExtensions": true,
    "incremental": true
  },
  "include": [
    "scripts/**/*.ts"
  ]
}